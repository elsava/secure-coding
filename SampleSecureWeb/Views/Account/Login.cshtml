@model SampleSecureWeb.ViewModels.LoginViewModel

<div class="row">
    <div class="col-lg-4">
        <div class="card-header">
            Registration
        </div>
        <div class="card-body">
            @if(ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    @ViewBag.Message
                </div>
            }
            <form asp-action="Login">
                <input type="hidden" asp-for="ReturnUrl" />
                <div asp-validation-summary="ModelOnly" class="text-daanger"></div>
                <div class="form-group">
                    <input asp-for="Username" class="form-control form-control-user" placeholder="Username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control form-control-user" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-user btn-block"  value="submit" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptspartial");
    }
} 